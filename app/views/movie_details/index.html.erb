<h1>Listing movie_details</h1>

<table>
  <tr>
    <th>Movie</th>
    <th>Star</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movie_details.each do |movie_detail| %>
  <tr>
    <td><%= movie_detail.movie_id %></td>
    <td><%= movie_detail.star %></td>
    <td><%= movie_detail.description %></td>
    <td><%= link_to 'Show', movie_detail %></td>
    <td><%= link_to 'Edit', edit_movie_detail_path(movie_detail) %></td>
    <td><%= link_to 'Destroy', movie_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

